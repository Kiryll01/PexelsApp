<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ProgressBar

            android:layout_width="match_parent"
            android:layout_height="75dp"
            style="@style/Widget.ProgressBar.Circle"
            android:layout_gravity="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/circle_progress_bar"/>

    <TextView

            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textAppearance="@style/RedTextStyle"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:text="Oops... something went wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/retry"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginBottom="8dp"/>
    <TextView
            android:padding="8dp"
            android:text="error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMsg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>